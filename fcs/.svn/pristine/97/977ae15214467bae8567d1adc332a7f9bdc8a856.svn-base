public class Person extends PersonAbstract{
	//constructors
	//constructor with no inputs
	Person(){
		this.name = "unknown";
		this.age = -99;
		this.address = "None";
	}
	//constructor with input values
	Person(int age, String name, String address){
		this.age = age;
		this.name = name;
		this.address = address;
	}

	//accessors and mutators
	public void setAge(int _age){
		this.age = _age;
	}
	public int getAge(){
		return age;
	}
	public void setName(String _name){
		this.name = _name;
	}
	public String getName(){
		return name;
	}
	public void setAddress(String _address){
		this.address = _address;
	}
	public String getAddress(){
		return address;
	}

	//method
	//this method displays the person's detailed information
	public void display(){
		System.out.println("name: "+this.name+", age: "+this.age+", address: "+this.address+";");
	}
}